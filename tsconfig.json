{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@assets/*": [
        "./src/assets/*"
      ],
      "@components": [
        "./src/components"
      ],
      "@contexts": [
        "./src/contexts"
      ],
      "@interfaces": [
        "./src/interfaces"
      ],
      "@tests": [
        "./.tests"
      ]
    }
  },
  "include": ["src", "./.tests/test-utils.tsx", "jest.config.cjs"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}